<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.menuController.CharacterSelectionController">
    <children>
        <Text fx:id="playerOneSelection" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="30.0" text="Player 1: "/>
        <Text fx:id="playerTwoSelection" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="60.0" text="Player 2: "/>
        <Button fx:id="kimButton" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="100.0" text="KIM" onMouseClicked="#handleCharacterSelection"/>
        <Button fx:id="panButton" AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="100.0" text="PAN" onMouseClicked="#handleCharacterSelection"/>
        <Button fx:id="parButton" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="100.0" text="PAR" onMouseClicked="#handleCharacterSelection"/>
        <Button fx:id="kaiButton" AnchorPane.leftAnchor="350.0" AnchorPane.topAnchor="100.0" text="KAI" onMouseClicked="#handleCharacterSelection"/>
    </children>
</AnchorPane>
